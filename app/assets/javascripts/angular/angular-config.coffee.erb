#= depend_on_asset "about.html"


predikt.config  ["$routeProvider", "$locationProvider", ($routeProvider, $locationProvider) ->
  $routeProvider

    .when '/',                  { templateUrl: '<%= asset_path("index.html") %>' }
    .when '/upcoming-matches',  { templateUrl: '<%= asset_path("index.html") %>' }

    .when '/completed-matches', { templateUrl: '<%= asset_path("matches/completed_index.html") %>' }

    .when '/leaderboard',
      templateUrl: '<%= asset_path("leaderboard/leaderboard.html") %>'
      controller: 'LeaderboardCtrl'

    .when '/about',   { templateUrl: '<%= asset_path("about.html") %>'    }
    .when '/help',    { templateUrl: '<%= asset_path("help.html") %>'     }
    .when '/contact', { templateUrl: '<%= asset_path("contact.html") %>'  }
    .when '/terms',   { templateUrl: '<%= asset_path("terms.html") %>'    }
    .when '/privacy', { templateUrl: '<%= asset_path("privacy.html") %>'  }
    .when '/my-profile', { templateUrl: '<%= asset_path("public_profile.html") %>'  }
    .otherwise        { templateUrl: '404.html'    }
]


predikt.directive 'upcomingList', ->
  {
    restrict: 'E'
    templateUrl: '<%= asset_path("matches/upcoming_matches_list.html") %>'
    controller: 'UpcomingMatchesListCtrl'
  }
predikt.directive 'completedList', ->
  {
    restrict: 'E'
    templateUrl: '<%= asset_path("matches/completed_matches_list.html") %>'
    controller: 'CompletedMatchesListCtrl'
  }
predikt.directive 'leaderboardRight', ->
  {
    restrict: 'E'
    templateUrl: '<%= asset_path("leaderboard/leaderboard_right.html") %>'
    controller: 'LeaderboardCtrl'
  }
