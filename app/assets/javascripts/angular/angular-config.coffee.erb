#= depend_on_asset "misc/about.html"


predikt.config  ["$routeProvider", "$locationProvider", ($routeProvider, $locationProvider) ->
  $routeProvider

    .when '/',                  { templateUrl: '<%= asset_path("index.html") %>' }
    .when '/upcoming-matches',  { templateUrl: '<%= asset_path("index.html") %>' }

    .when '/completed-matches', { templateUrl: '<%= asset_path("index_completed_matches.html") %>' }

    .when '/leaderboard',
      templateUrl: '<%= asset_path("leaderboard/leaderboard.html") %>'
      controller: 'LeaderboardCtrl'

    .when '/about',       { templateUrl: '<%= asset_path("misc/about.html") %>'    }
    .when '/help',        { templateUrl: '<%= asset_path("misc/help.html") %>'     }
    .when '/contact',     { templateUrl: '<%= asset_path("misc/contact.html") %>'  }
    .when '/terms',       { templateUrl: '<%= asset_path("misc/terms.html") %>'    }
    .when '/privacy',     { templateUrl: '<%= asset_path("misc/privacy.html") %>'  }
    
    .when '/my-profile',  { templateUrl: '<%= asset_path("index_private_profile.html") %>'  }

    .otherwise            { templateUrl: '404.html'    }
]


predikt.directive 'upcomingMatches', ->
  {
    restrict: 'E'
    templateUrl: '<%= asset_path("matches/upcoming_matches.html") %>'
    controller: 'UpcomingMatchesCtrl'
  }
predikt.directive 'completedMatches', ->
  {
    restrict: 'E'
    templateUrl: '<%= asset_path("matches/completed_matches.html") %>'
    controller: 'CompletedMatchesCtrl'
  }
predikt.directive 'leaderboardRight', ->
  {
    restrict: 'E'
    templateUrl: '<%= asset_path("leaderboard/leaderboard_right.html") %>'
    controller: 'LeaderboardCtrl'
  }
predikt.directive 'privateProfile', ->
  {
    restrict: 'E'
    templateUrl: '<%= asset_path("profile/private_profile.html") %>'
    controller: 'PublicProfileCtrl'
  }