@import 'variables'

.game-buttons
  font-size 12px

.game-buttons > div
  text-align center

.game-buttons button
  font-size 12px
  height 25px
  padding 0
  width 100%

.game-buttons .badge
  background-color transparent
  border 1px solid
  border-color #999
  color #999
  font-size 12px
  font-weight normal

