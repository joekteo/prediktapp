@import 'variables'

.profile-container h2
  color #555
  font-size 14px
  font-weight bold
  text-transform uppercase

.profile-container p
  color #555
  font-size 14px
  font-weight bold

.row1 h2
  color #555
  font-size 14px
  font-weight bold
  margin -10px
  text-align center
  text-transform uppercase

.row2
  font-size 18px
  font-weight bold
  text-align center
  text-transform uppercase

.bet-date
  color #666
  font-size 12px

.profile-title-h1
  float left

.profile-link
  text-align right
  padding-top 4px

.edit-profile-button
  font-size 30px
  font-weight 500
  color titles-color
  text-align right
  cursor pointer

.edit-profile-button:hover
  text-decoration none

.edit-profile-text
  margin-right 15px
  font-size 17px
  text-transform uppercase

.edit-profile-button
  text-align center
  margin-top 30px

.btn-edit-profile
  background transparent
  font-size 14px
  font-weight 400
  margin 0 15px
  color #fff

@media (max-width: 640px)
  .edit-profile-text
    display none

.profile-picture
  margin 10px
  text-align center

.profile-followers
  text-align center
  margin-bottom 5px

.profile-followers-number
  color #428bca;
  font-size 17px
  font-weight 500
  margin 0 5px

.profile-follow-button
  height 30px
  padding 5px 19px 7px
  margin-bottom 10px

.update-profile-form
  margin-top 3px

.update-profile-form .form-control
  width 80%
  float right

.update-profile-form label
  padding-top 6px
  font-weight 400

.update-profile-form .form-control[placeholder]
  color #333
.update-profile-form .form-control::-webkit-input-placeholder
  color #ccc
  font-style italic
.update-profile-form .form-control:-moz-placeholder
  color #ccc
  font-style italic
.update-profile-form .form-control::-moz-placeholder
  color #ccc
  font-style italic
.update-profile-form .form-control:-ms-input-placeholder
  color: #ccc
  font-style italic

.btn.btn-match-url
  font-size 0.95em
  height 27px
  padding 5px 10px
  margin 0 5px
