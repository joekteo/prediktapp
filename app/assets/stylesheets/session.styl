@import 'styles'

.input-field
  background-color #fff
  background-image none
  border-radius 5px
  border-width 0 0 2px 0
  color #555
  font-size 14px
  height 34px
  line-height 1.42857143
  padding 5px 10px
  width 100%

.input-field:focus
  border-color #66afe9
  outline 0
  -webkit-box-shadow inset 0 1px 1px rgba(0,0,0,.075), 0 0 8px rgba(102, 175, 233, .6)
          box-shadow inset 0 1px 1px rgba(0,0,0,.075), 0 0 8px rgba(102, 175, 233, .6)

.input-field:-moz-placeholder
  color #999
  opacity 1

.input-field:-ms-input-placeholder
  color #999

.input-field:-webkit-input-placeholder
  color #999

.input-field-text
  color hsla(0, 0%, 70%, 1)

.form-group > .field_with_errors
  display inline

.login-form-selector
  margin 20px 0 0

.login-form-selector > ul > li
  text-align center
  width 33.333333%

.login-selector-right li:hover
  border-radius 0px 4px 0 0

.login-form-selector > ul > li > a
  margin-right 0

.login-form-tab
  background-color dark-transparent-50
  border-color transparent
  border-radius 0 0 8px 8px
  height 550px
  padding 40px 40px 0 40px

.login-form-tab > form > fieldset > legend
  font-size 20px
  color titles-color

.login-form-tab > form > fieldset > div > input.btn
  margin-left 12px
  margin-top 15px

.confirm-registration
  border-top-style solid
  margin-top 61px

.alert-success
  font-weight bold
  font-size 18px
  text-align center

.alert-message
  border-radius 4px
  font-size 18px
  font-weight bold
  margin-bottom 20px
  padding 10px
  text-align center
  /*border 1px solid #d6e9c6*/

.alert-message-login
  color #3c763d

.alert-message-logout
  color red

.welcome
  text-align center

.undefined-field
  color #999
  font-style italic

.profile-settings
  background-color dark-transparent-50
  border-radius 8px
  margin 20px 0 40px
  padding 14px

.cancel-button
  margin-left 12px
  margin-top 15px
  min-width 80px

.edit-button
  margin-right 15px

password-match(color)
  font-size 18px
  margin-left 20px
  padding-top 20px
  color color

.password-match-ok
  password-match(green)

.password-match-no
  password-match(red)

.progress
  margin 11px 0 0 0

.password-crack-time
  color #999
  font-size 12px
  margin 5px 0 0 5px

.form-group
  margin 10px -30px 10px 0

.log-button
  padding 0

#submit-button
  width 100%
  margin 0 10px 0 0

.nav-tabs>li
  background-color dark-transparent-50
  font-size 12px

.nav-tabs>li.active>a
  background-color dark-transparent-50
  color titles-color
