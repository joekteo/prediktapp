.row data-ng-controller="LeaderboardCtrl"
  .leaderboard-list data-ng-init="predicate = '-coins'"
    .panel-heading.leaderboard-heading
      h1 Leaderboard

    table.table.leaderboard-table
      thead
        tr
          th Rank
          th Profile Picture
          th
            a href="" data-ng-click="predicate = 'user_name'; reverse=!reverse"
              | Username 
              i.fa.fa-sort
          th data-ng-click="predicate = 'links.followings_as_followers.length'; reverse=!reverse"
            Number of Followers 
            i.fa.fa-sort
          th data-ng-click="predicate = 'links.followings_as_followees.length'; reverse=!reverse"
            | Number of Followees 
            i.fa.fa-sort
          th
            a href="" data-ng-click="predicate = 'coins'; reverse=!reverse"
              | Number of Coins 
              i.fa.fa-sort
          th
            a href="" data-ng-click="predicate = 'win_percentage'; reverse=!reverse"
              | Percentage of Wins 
              i.fa.fa-sort
          th 
            | Number of Bets 
            i.fa.fa-sort
          th
            | Number of Wins 
            i.fa.fa-sort
          th
            | Number of Losses 
            i.fa.fa-sort
          th
            a href="" data-ng-click="predicate = 'current_streak'; reverse=!reverse"
              | Current Win Streak 
              i.fa.fa-sort

      tbody
        tr data-ng-repeat="user in users | orderBy:predicate:reverse | limitTo: 10"
          td.leaderboard-rank 
            | {{$index +1}}
          td
            img src="http://png-1.findicons.com/files/icons/1072/face_avatars/300/i04.png" width="20px" height="20px" alt="Profile Picture"
          td.leaderboard-name 
            | {{user.user_name}}
          td.leaderboard-followers
            | {{user.links.followings_as_followers.length}} 
            i.fa.fa-user
          td.leaderboard-followers
            | {{user.links.followings_as_followees.length}} 
            i.fa.fa-user
          td.leaderboard-coins
            | {{user.coins | number:0}} coins
          td.leaderboard-percent
            | {{user.win_percentage *100 | number:0}}% wins
          td.leaderboard-number-bets
            | {{user.links.bets.length}} bets
          td.leaderboard-number-bets
            | {{user.numberOfWins}} wins
          td.leaderboard-number-bets
            | {{user.numberOfLoss}} loss
          td.leaderboard-number-bets
            | {{user.current_streak}} wins